@model GroupCreateEditViewModel

@{
    ViewData["Title"] = "Create New Group";
    Layout = "_LayOut001";
}

@section Header
{
    <div></div>
}

<section class="page-section bg-primary" id="create-group">
    <div class="container px-4 px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm p-4 bg-light">
                    <h2 class="text-center mb-4">New Group Details</h2>
                    <form asp-action="SaveNewGroup" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Group Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Group Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter group name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Group Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your group"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Privacy State -->
                        <div class="mb-3">
                            <label asp-for="PrivacyStateId" class="form-label">Privacy</label>
                            <select asp-for="PrivacyStateId" class="form-select" asp-items="@(new SelectList(Model.PrivacyStateList, "Id", "Name"))">
                                <option value="">Select privacy setting</option>
                            </select>
                            <span asp-validation-for="PrivacyStateId" class="text-danger"></span>
                        </div>

                        <!-- Cover Image -->
                        <div class="mb-3">
                            <label for="ImageFile" class="form-label">Cover Image</label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Create Group</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

