@model List<SearchProfileCardViewModel>

@{
    ViewData["Title"] = "User Search Results";
}

@section Header
{
    <div></div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        .search-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .search-results {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .profile-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

        .profile-card:hover {
            transform: translateY(-5px);
        }

        .profile-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .username {
            font-size: 1.2em;
            margin: 10px 0;
            color: #333;
        }

        .no-results {
            text-align: center;
            font-size: 1.1em;
            color: #666;
            margin-top: 20px;
        }
        .profile-button {
            display: inline-block;
            margin-top: 8px;
            padding: 6px 12px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
        }
        .profile-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="search-container">
        <h2>   Search Results</h2>
        <div style="border-top: 1px solid #ccc; margin: 10px 0;"></div>
        @if (Model == null || !Model.Any())
        {
            <p class="no-results">No users found.</p>
        }
        else
        {
            <div class="search-results">
                @foreach (var user in Model)
                {
                    <div class="profile-card">
                        <img src="/Images/@user.UserImageUrl" alt="@user.UserName's profile image" class="profile-image" />
                        <div class="username">@user.UserName</div>
                        <a href="/Profile/OtherProfile?userId=@user.UserId" class="profile-button">View Profile</a>
                    </div>
                }
            </div>
        }
    </div>
</body>
</html>


