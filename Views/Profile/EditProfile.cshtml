@model SocialMediaApp.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

@section Header
{
    <div></div>
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow p-4" style="width: 100%; max-width: 600px;">
        <h2 class="card-title text-center mb-4">Edit Profile</h2>

        <form asp-action="SaveProfileEdit" asp-controller="Profile" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Toggle button -->
            <button class="btn btn-outline-secondary mb-3 w-100" type="button" data-bs-toggle="collapse" data-bs-target="#changePasswordCollapse" aria-expanded="false" aria-controls="changePasswordCollapse">
                Change Password
            </button>

            <!-- Collapsible password section -->
            <div class="collapse" id="changePasswordCollapse">
                <div class="card card-body bg-light mb-3">
                    <div class="form-group mb-3">
                        <label asp-for="Password">New Password (optional)</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PasswordConfirm">Confirm Password</label>
                        <input asp-for="PasswordConfirm" class="form-control" type="password" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Profile Image Section -->
            <div class="form-group mb-3 text-center">
                <label>Current Profile Image</label><br />
                <img src="/Images/@Model.OwnerImageURL" alt="Profile Image" width="150" class="img-thumbnail mb-2" /><br />
                <input type="file" name="profileImageFile" class="form-control-file mt-2" />
            </div>

            <!-- Cover Image Section -->
            <div class="form-group mb-3 text-center">
                <label>Current Cover Image</label><br />
                <img src="/Images/@Model.OwnerCoverImageURL" alt="Cover Image" width="300" class="img-thumbnail mb-2" /><br />
                <input type="file" name="coverImageFile" class="form-control-file mt-2" />
            </div>

            <!-- Privacy Setting Dropdown -->
            <div class="form-group mb-4">
                <label asp-for="PrivacyStateId">Privacy Setting</label>
                <select asp-for="PrivacyStateId" class="form-control" asp-items="@(new SelectList(Model.privacyStatesList, "Id", "Name", Model.PrivacyStateId))">
                    <option disabled value="">-- Select Privacy --</option>
                </select>
                <span asp-validation-for="PrivacyStateId" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </div>
        </form>
    </div>
</div>
